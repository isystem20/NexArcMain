{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@abp/*": [ "node_modules/abp-ng2-module/dist/src/*" ],
      "@app/*": [ "src/app/*" ],
      "@shared/*": [ "src/shared/*" ],
      "@node_modules/*": [ "node_modules/*" ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
 